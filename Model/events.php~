<?php
 abstract class EventNames
 {
    const EventItemAddedToCart = "ItemAddedToCart";
    const EventItemRemovedFromCart = "ItemRemovedFromCart";
    const EventItemCanceled = "ItemCanceled";
    const EventItemOrdered = "ItemOrdered";
    const EventItemPreviewed = "ItemPreviewed";
 }
 
 class ItemEvent{
 	public $itemID;
	public $timestamp;
	public $customerID;
	public $eventName;
 }

?>
